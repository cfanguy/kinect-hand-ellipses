<Window x:Class="Kinect_Hand_Ellipses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Image Name="videoImage"></Image>
        <Canvas Background="Black">
            <Ellipse Fill="Transparent" Height="60" Width="60" Name="leftHand" Stroke="Blue" StrokeThickness="5" />
            <Ellipse Fill="Transparent" Height="60" Width="60" Name="rightHand" Stroke="Green"  StrokeThickness="5" />
        </Canvas>
    </Grid>
</Window>